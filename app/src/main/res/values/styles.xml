<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="TabLayoutTextStyle">
        <item name="android:textSize">@dimen/x13</item>
    </style>

    <style name="TabLayoutTextStyle1">
        <item name="android:textSize">@dimen/x15</item>
    </style>

    <!--错误提示-->
    <style name="textview_error_hint">
        <item name="android:drawableLeft">@drawable/ic_error</item>
        <item name="android:layout_marginTop">@dimen/x10</item>
        <item name="android:textSize">@dimen/x10</item>
        <item name="android:drawablePadding">@dimen/x8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">invisible</item>
        <item name="android:layout_marginLeft">@dimen/x10</item>
        <item name="android:textColor">@color/xiaoxi_bg</item>
    </style>

    <style name="dialog_setting" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item><!-- 无标题 -->
        <item name="android:windowBackground">@color/touming</item>//背景设置为透明
    </style>

    <!--控制dialog进出动画-->
    <style name="dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <!-- 进入时的动画 -->
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
        <!-- 退出时的动画 -->
    </style>

</resources>
