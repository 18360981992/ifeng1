<?xml version="1.0" encoding="utf-8"?>
<!--托管鉴定 详情页-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.Authenticate_Details_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian"
        >
        <RelativeLayout
            android:id="@+id/authenticate_Details_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg"
            >
            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_back"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="托管预约"
            android:textSize="@dimen/x16"
            android:textColor="@color/baise"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x8"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/authenticate_Details_img"
                    android:layout_width="@dimen/x80"
                    android:layout_height="@dimen/x80"
                    android:background="@drawable/guangao"
                    android:layout_marginLeft="@dimen/x8"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/x10"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="藏品编码:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_bianma"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="325000158"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="藏品名称:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="世博四连体"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="计件单位:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_danwei"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="枚"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="托管进度:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_jindu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100/200"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="起征数量:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_shuliang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="100"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/x3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="申请时间:"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            />
                        <TextView
                            android:id="@+id/authenticate_Details_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2018-05-17"
                            android:textSize="@dimen/x11"
                            android:textColor="@color/name_se"
                            android:layout_marginLeft="@dimen/x8"
                            />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x30"
                android:background="@color/fengouxian"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="预约时间"
                    android:textSize="@dimen/x13"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x8"/>
            </LinearLayout>

            <com.ifeng_tech.treasuryyitong.view.MyListView
                android:id="@+id/authenticate_Details_MyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:overScrollMode="never"
                android:background="@color/baise"
                ></com.ifeng_tech.treasuryyitong.view.MyListView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
