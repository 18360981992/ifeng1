<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/fuise_dabg"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.yewu_pass.Business_Pass_Setting_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:background="@drawable/zichan_jianbian">

                <RelativeLayout
                    android:id="@+id/business_Pass_Setting_Fan"
                    android:layout_width="@dimen/x60"
                    android:layout_height="match_parent"
                    android:background="@drawable/fanhui_bg">

                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x28"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x20"
                        android:layout_marginLeft="@dimen/x30"
                        android:background="@drawable/btn_back" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x16"
                    android:text="业务密码（设置）"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x32" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x450"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:layout_marginTop="@dimen/x60"
                        android:background="@color/baise">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="新业务密码"
                                android:textSize="@dimen/x28"
                                android:textColor="@color/name_se"
                                android:layout_marginLeft="@dimen/x30"/>
                            <EditText
                                android:id="@+id/business_Pass_Setting_new_pass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="请输入业务密码"
                                android:textSize="@dimen/x28"
                                android:textColor="@color/name_se"
                                android:layout_marginLeft="@dimen/x30"
                                android:layout_marginRight="@dimen/x30"
                                android:inputType="numberPassword"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:gravity="center_vertical"
                                android:maxLength="6"
                                android:background="@null"
                                />
                            <!--android:background="@drawable/tihuo_ed_bg"-->
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x2"
                            android:background="@color/fengouxian"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginLeft="@dimen/x30"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            >
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="确认密码"
                                android:textSize="@dimen/x28"
                                android:textColor="@color/name_se"
                                android:layout_marginLeft="@dimen/x30"/>
                            <EditText
                                android:id="@+id/business_Pass_Setting_zaici_pass"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="请再次输入业务密码"
                                android:textSize="@dimen/x28"
                                android:textColor="@color/name_se"
                                android:layout_marginLeft="@dimen/x56"
                                android:layout_marginRight="@dimen/x30"
                                android:inputType="numberPassword"
                                android:singleLine="true"
                                android:textColorHint="@color/color_999999"
                                android:gravity="center_vertical"
                                android:maxLength="6"
                                android:background="@null"
                                />
                            <!--android:background="@drawable/tihuo_ed_bg"-->

                        </LinearLayout>

                        <!--<View-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="@dimen/x2"-->
                        <!--android:background="@color/fengouxian"-->
                        <!--android:layout_marginRight="@dimen/x16"-->
                        <!--android:layout_marginLeft="@dimen/x16"-->
                        <!--/>-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"></LinearLayout>

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <Button
                            android:id="@+id/business_Pass_Setting_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x80"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/x16"
                            android:layout_marginLeft="@dimen/x16"
                            android:layout_marginRight="@dimen/x16"
                            android:background="@drawable/congzhi_bg"
                            android:text="确定"
                            android:textColor="@color/baise"
                            android:textSize="@dimen/x30"
                            android:gravity="center"
                            />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/business_Pass_Setting_weitanchuan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:background="@color/weitanchuang"
                    android:gravity="center_vertical"
                    android:visibility="invisible"
                    >
                    <ImageView
                        android:id="@+id/business_Pass_Setting_weitanchuan_img"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_marginLeft="@dimen/x16"
                        />
                    <TextView
                        android:id="@+id/business_Pass_Setting_weitanchuan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="设置失败"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x28"
                        android:layout_marginLeft="@dimen/x16"/>

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    </RelativeLayout>

</ScrollView>
