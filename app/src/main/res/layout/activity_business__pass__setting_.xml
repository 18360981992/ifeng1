<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.yewu_pass.Business_Pass_Setting_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/business_Pass_Setting_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="业务密码（设置）"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x50"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="新业务密码"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"/>
                    <EditText
                        android:id="@+id/business_Pass_Setting_new_pass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:hint="请输入业务密码"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg"
                        android:inputType="numberPassword"
                        android:singleLine="true"
                        android:textColorHint="@color/color_999999"
                        android:gravity="center_vertical"
                        android:maxLength="6"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="确认密码"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"/>
                    <EditText
                        android:id="@+id/business_Pass_Setting_zaici_pass"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:hint="请再次输入业务密码"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x56"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg"
                        android:inputType="numberPassword"
                        android:singleLine="true"
                        android:textColorHint="@color/color_999999"
                        android:gravity="center_vertical"
                        android:maxLength="6"
                        />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/business_Pass_Setting_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x16"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/congzhi_bg"
                        android:text="确定"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x28"
                        android:gravity="center"
                        />
                </RelativeLayout>
            </LinearLayout>



        </ScrollView>

        <LinearLayout
            android:id="@+id/business_Pass_Setting_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/business_Pass_Setting_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/business_Pass_Setting_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
