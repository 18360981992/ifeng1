<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        >
        <TextView
            android:id="@+id/pick_up_goods_cha_list_danhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2568974156334342342423"
            android:textSize="@dimen/x20"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x16"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/x16"
            >
            <TextView
                android:id="@+id/pick_up_goods_cha_list_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="世博四连体"
                android:textSize="@dimen/x24"
                android:textColor="@color/name_se"
                />

            <TextView
                android:id="@+id/pick_up_goods_cha_list_cword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6589741568971"
                android:textSize="@dimen/x24"
                android:textColor="@color/name_se"
                android:layout_marginTop="@dimen/x35"
                />


        </LinearLayout>
        <TextView
            android:id="@+id/pick_up_goods_cha_list_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x16"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/pick_up_goods_cha_list_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥100.00"
                android:textSize="@dimen/x24"
                android:textColor="@color/name_se"
                android:layout_alignParentRight="true"
                />
            <TextView
                android:id="@+id/pick_up_goods_cha_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018.05.23"
                android:textSize="@dimen/x20"
                android:textColor="@color/name_se"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/pick_up_goods_cha_list_price"
                android:layout_marginTop="@dimen/x25"
                />
        </RelativeLayout>


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x16"
            android:visibility="visible"
            >
            <TextView
                android:id="@+id/pick_up_goods_cha_list_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="等待提货"
                android:textSize="@dimen/x20"
                android:textColor="@color/text_se"
                />
        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian1"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:layout_marginTop="@dimen/x15"
        android:layout_alignParentBottom="true"/>
</LinearLayout>
