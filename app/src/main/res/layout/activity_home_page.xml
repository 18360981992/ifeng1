        <LinearLayout
            android:id="@+id/xiaoxi"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <RelativeLayout
                android:layout_width="@dimen/x75"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    >
                    <ImageView
                        android:id="@+id/xiaoxiImg"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/xiaoxiName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="消息"
                        android:textColor="@color/zhuse_ziti"
                        android:textSize="@dimen/x20"
                        android:layout_marginTop="@dimen/x8"
                        />
                </LinearLayout>

                <TextView
                    android:id="@+id/xiaoxi_shumu"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:text="0"
                    android:textColor="#FFF"
                    android:textSize="@dimen/x13"
                    android:background="@drawable/xiaoxi_dian"
                    android:visibility="gone"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/x5"
                    />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/faxian"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/faxianImg"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/faxianName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发现"
                android:textColor="@color/zhuse_ziti"
                android:textSize="@dimen/x20"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/wode"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/wodeImg"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/wodeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的"
                android:textColor="@color/zhuse_ziti"
                android:textSize="@dimen/x20"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                />
        </LinearLayout>

    </LinearLayout>
    

