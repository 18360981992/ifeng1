<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ifeng_tech.treasuryyitong.ui.HomePageActivity"
    android:background="@color/baise">
    <RelativeLayout
        android:id="@+id/homepage_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/homepage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="首页"
            android:textSize="@dimen/x32"
            android:textColor="@color/baise"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/homepage_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        >

        <LinearLayout
            android:id="@+id/shouye"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/shouyeImg"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/shouyeName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="首页"
                android:textColor="@color/zhuse"
                android:textSize="@dimen/x20"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/zixun"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:gravity="center"
            >
            <ImageView
                android:id="@+id/zixunImg"
                android:layout_width="@dimen/x36"
                android:layout_height="@dimen/x36"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/zixunName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="宝库"
                android:textColor="@color/zhuse_ziti"
                android:textSize="@dimen/x20"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                />
        </LinearLayout>

