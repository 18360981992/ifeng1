<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Forget_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/forget_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="忘记密码"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="新登录密码"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x16"
                    />
                <EditText
                    android:id="@+id/forget_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/x30"
                    android:maxLength="10"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:hint="新登录密码"
                    android:textColorHint="@color/color_999999"
                    android:layout_marginRight="@dimen/x16"
                    android:singleLine="true"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/fengouxian1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认新密码"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x16"
                    />
                <EditText
                    android:id="@+id/forget_queren"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/x30"
                    android:maxLength="10"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:hint="新登录密码"
                    android:textColorHint="@color/color_999999"
                    android:layout_marginRight="@dimen/x16"
                    android:singleLine="true"
                    android:inputType="textPassword"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/fengouxian1"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forget_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/forget_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/forget_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="找回密码失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
        <Button
            android:id="@+id/forget_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/congzhi_bg"
            android:text="确认"
            android:textColor="@color/baise"
            android:textSize="@dimen/x28" />
    </RelativeLayout>
</LinearLayout>
