<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Retrieve_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/retrieve_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="手机号验证"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginTop="@dimen/x60"
                android:gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="手机号码:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28" />

                <TextView
                    android:id="@+id/retrieve_shoujihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x32"
                    android:text="183*****992"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28"
                    android:visibility="gone"
                    />
                <EditText
                    android:id="@+id/retrieve_shoujihao_shuru"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:hint="请输入手机号"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg"
                    android:inputType="number"
                    android:singleLine="true"
                    android:maxLength="11"
                    android:visibility="gone"
                    android:gravity="center_vertical"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x20"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="验证码:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:layout_marginLeft="@dimen/x56"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg">

                    <EditText
                        android:id="@+id/retrieve_duan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="短信验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x28"
                        android:gravity="center_vertical"
                        />

                    <View
                        android:layout_width="@dimen/x2"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x4"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/retrieve_duan_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="点击发送"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x26" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/retrieve_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible">

            <ImageView
                android:id="@+id/retrieve_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16" />

            <TextView
                android:id="@+id/retrieve_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:text="验证失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28" />

        </LinearLayout>

        <Button
            android:id="@+id/retrieve_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/congzhi_bg"
            android:text="下一步"
            android:textColor="@color/baise"
            android:textSize="@dimen/x28"
            android:gravity="center"
            />
    </RelativeLayout>
</ScrollView>


</LinearLayout>
