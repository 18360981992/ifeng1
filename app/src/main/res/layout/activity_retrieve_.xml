<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="@color/fuise_dabg"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Retrieve_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:background="@drawable/zichan_jianbian">

                <RelativeLayout
                    android:id="@+id/retrieve_Fan"
                    android:layout_width="@dimen/x60"
                    android:layout_height="match_parent"
                    android:background="@drawable/fanhui_bg">

                    <ImageView
                        android:layout_width="@dimen/x16"
                        android:layout_height="@dimen/x28"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x20"
                        android:layout_marginLeft="@dimen/x30"
                        android:background="@drawable/btn_back" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/x16"
                    android:text="手机号验证"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x32" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x450"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/x20"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@color/baise"
                        android:layout_marginTop="@dimen/x60">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:text="手机号码"
                                android:textColor="@color/name_se"
                                android:textSize="@dimen/x28" />

                            <TextView
                                android:id="@+id/retrieve_shoujihao"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x85"
                                android:text="183*****992"
                                android:textColor="@color/name_se"
                                android:textSize="@dimen/x28"
                                android:visibility="gone"
                                />
                            <EditText
                                android:id="@+id/retrieve_shoujihao_shuru"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x70"
                                android:hint="请输入手机号"
                                android:textSize="@dimen/x28"
                                android:textColor="@color/name_se"
                                android:layout_marginLeft="@dimen/x85"
                                android:layout_marginRight="@dimen/x30"
                                android:background="@drawable/tihuo_ed_bg"
                                android:inputType="number"
                                android:singleLine="true"
                                android:maxLength="11"
                                android:visibility="gone"
                                android:gravity="center_vertical"
                                />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x2"
                            android:background="@color/fengouxian"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginLeft="@dimen/x30"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:text="验证码"
                                android:textColor="@color/name_se"
                                android:textSize="@dimen/x28" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x80"
                                android:layout_marginLeft="@dimen/x112"
                                android:layout_marginRight="@dimen/x30"
                                >
                                <!--android:background="@drawable/tihuo_ed_bg"-->
                                <EditText
                                    android:id="@+id/retrieve_tu_yan"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.3"
                                    android:background="@null"
                                    android:hint="请输入验证码"
                                    android:maxLength="4"
                                    android:singleLine="true"
                                    android:textColor="@color/name_se"
                                    android:textSize="@dimen/x28"
                                    android:gravity="center_vertical"
                                    />

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/x40"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/x4"
                                    android:background="@color/color_e5e5e5" />

                                <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:paddingBottom="@dimen/x6"
                                    android:paddingTop="@dimen/x6"
                                    android:paddingLeft="@dimen/x12"
                                    android:paddingRight="@dimen/x12"
                                    >
                                    <ImageView
                                        android:id="@+id/retrieve_tu_yan_img"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x2"
                            android:background="@color/fengouxian"
                            android:layout_marginRight="@dimen/x30"
                            android:layout_marginLeft="@dimen/x30"
                            />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/x30"
                                android:text="短信验证码"
                                android:textColor="@color/name_se"
                                android:textSize="@dimen/x28" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x80"
                                android:layout_marginLeft="@dimen/x56"
                                android:layout_marginRight="@dimen/x30"
                                >
                                <!--android:background="@drawable/tihuo_ed_bg"-->
                                <EditText
                                    android:id="@+id/retrieve_duan"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1.3"
                                    android:background="@null"
                                    android:hint="请输入短信验证码"
                                    android:inputType="number"
                                    android:maxLength="4"
                                    android:singleLine="true"
                                    android:textColor="@color/name_se"
                                    android:textSize="@dimen/x28"
                                    android:gravity="center_vertical"
                                    />

                                <View
                                    android:layout_width="@dimen/x2"
                                    android:layout_height="@dimen/x40"
                                    android:layout_gravity="center_vertical"
                                    android:layout_margin="@dimen/x4"
                                    android:background="@color/color_e5e5e5" />

                                <TextView
                                    android:id="@+id/retrieve_duan_btn"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="点击发送"
                                    android:textColor="@color/name_se"
                                    android:textSize="@dimen/x26" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <Button
                            android:id="@+id/retrieve_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x80"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/x16"
                            android:layout_marginLeft="@dimen/x16"
                            android:layout_marginRight="@dimen/x16"
                            android:layout_marginTop="@dimen/x15"
                            android:background="@drawable/congzhi_bg"
                            android:text="下一步"
                            android:textColor="@color/baise"
                            android:textSize="@dimen/x30"
                            android:gravity="center"
                            />
                    </RelativeLayout>
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/retrieve_weitanchuan"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:background="@color/weitanchuang"
                    android:gravity="center_vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/retrieve_weitanchuan_img"
                        android:layout_width="@dimen/x40"
                        android:layout_height="@dimen/x40"
                        android:layout_marginLeft="@dimen/x16" />

                    <TextView
                        android:id="@+id/retrieve_weitanchuan_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:text="验证失败"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x28" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </RelativeLayout>

</ScrollView>
