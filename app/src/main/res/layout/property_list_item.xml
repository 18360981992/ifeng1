<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_bg"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/property_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值"
                android:textSize="@dimen/x28"
                android:textColor="@color/name_se"
                />
            <TextView
                android:id="@+id/property_list_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2018-05-09"
                android:textSize="@dimen/x24"
                android:textColor="#FF797979"
                android:layout_marginTop="@dimen/x4"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:gravity="end"
            >
            <TextView
                android:id="@+id/property_list_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+1000"
                android:textSize="@dimen/x30"
                android:textColor="@color/zhuse"
                />
            <TextView
                android:id="@+id/property_list_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付中"
                android:textSize="@dimen/x22"
                android:layout_marginTop="@dimen/x4"
                />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>
