<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/item_bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x40"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/x10"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/property_list_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textSize="@dimen/x12"
            android:textColor="@color/name_se"
            />
        <TextView
            android:id="@+id/property_list_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-09"
            android:textSize="@dimen/x10"
            android:textColor="@color/zhuse_ziti"
            android:layout_marginTop="@dimen/x2"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/property_list_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+1000"
        android:textSize="@dimen/x13"
        android:textColor="@color/zhuse"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/x10"
        />
</RelativeLayout>
