<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Certification_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/certification_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="会员认证信息表"
            android:textColor="@color/baise"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:text="郑重提示：客户需仔细填写此表格，各项信息会与客户在结算银行开户的信息进行校验，如填写错误，可能导致客户认证失败！"
                android:textSize="@dimen/x10"
                android:textColor="@color/color_999999"
                android:lineSpacingExtra="@dimen/x2"
                android:layout_marginTop="@dimen/x10"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x8"/>
                <EditText
                    android:id="@+id/certification_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x30"
                    android:hint="输入您的真实姓名"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x58"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/tihuo_ed_bg"
                    android:singleLine="true"
                    android:textColorHint="@color/color_999999"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件类型"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x8"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x8"
                    >
                    <TextView
                        android:id="@+id/certification_type_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x30"
                        android:text="身份证"
                        android:textSize="@dimen/x12"
                        android:textColor="@color/name_se"
                        android:background="@drawable/tihuo_ed_bg"
                        android:layout_centerVertical="true"
                        android:gravity="center_vertical"
                        />
                    <LinearLayout
                        android:id="@+id/certification_type_btn"
                        android:layout_width="@dimen/x20"
                        android:layout_height="@dimen/x27"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/item_bg"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/x1"
                        >
                        <ImageView
                            android:layout_width="@dimen/x10"
                            android:layout_height="@dimen/x8"
                            android:background="@drawable/xia_jiantou"
                            android:layout_marginRight="@dimen/x20"
                            android:layout_gravity="center_vertical"
                            />
                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:gravity="center"
                android:layout_marginTop="@dimen/x8"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件号码"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x8"/>
                <EditText
                    android:id="@+id/certification_shenfenzheng"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x30"
                    android:hint="输入您的身份证号"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/tihuo_ed_bg"
                    android:singleLine="true"
                    android:textColorHint="@color/color_999999"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1.请上传身份证正反面带有头像或国徽的扫描件或清晰照片"
                android:textSize="@dimen/x10"
                android:textColor="@color/color_999999"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_marginTop="@dimen/x8"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="注：您的证件不会被其他网友看到，我们将严格保密，请放心上传"
                android:textSize="@dimen/x10"
                android:textColor="#C06102"
                android:layout_marginRight="@dimen/x8"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginTop="@dimen/x2"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="证件照片"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x8"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x35"
                    android:layout_marginRight="@dimen/x8"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/certification_shangchuan_zheng_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x65"
                            android:background="@drawable/zhengmian"
                            android:scaleType="fitXY"
                            />
                        <!--<TextView-->
                            <!--android:id="@+id/certification_shangchuan_zheng_btn"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="上传图片"-->
                            <!--android:textSize="@dimen/x12"-->
                            <!--android:textColor="@color/name_se"-->
                            <!--android:layout_marginTop="@dimen/x5"-->
                            <!--android:background="@drawable/shangchuan_anniu"-->
                            <!--/>-->
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x20"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <ImageView
                            android:id="@+id/certification_shangchuan_bei_img"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x65"
                            android:background="@drawable/beimian"
                            android:scaleType="fitXY"
                            />
                        <!--<TextView-->
                            <!--android:id="@+id/certification_shangchuan_bei_btn"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="上传图片"-->
                            <!--android:textSize="@dimen/x12"-->
                            <!--android:textColor="@color/name_se"-->
                            <!--android:layout_marginTop="@dimen/x5"-->
                            <!--android:background="@drawable/shangchuan_anniu"-->
                            <!--/>-->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:text="验证码:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x41"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/tihuo_ed_bg">

                    <EditText
                        android:id="@+id/certification_tu_yan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x12" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x20"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x2"
                        android:background="@color/color_e5e5e5" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingBottom="@dimen/x3"
                        android:paddingTop="@dimen/x3"
                        android:paddingLeft="@dimen/x6"
                        android:paddingRight="@dimen/x6"
                        >
                        <ImageView
                            android:id="@+id/certification_tu_yan_btn"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:background="@drawable/tu_yan"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x40"
                android:layout_marginTop="@dimen/x8"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x8"
                    android:text="手机验证码:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x13" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x15"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/tihuo_ed_bg">

                    <EditText
                        android:id="@+id/certification_duan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="短信验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x12" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x20"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x2"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/certification_duan_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="点击发送"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x12" />
                </LinearLayout>
            </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x30">
                    <Button
                        android:id="@+id/certification_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x35"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x8"
                        android:layout_marginLeft="@dimen/x8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@drawable/congzhi_bg"
                        android:text="确认"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x14" />
                </RelativeLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
