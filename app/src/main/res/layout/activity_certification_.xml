<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    android:fillViewport="true"
    android:scrollbars="none"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Certification_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:background="@drawable/zichan_jianbian">

                    <RelativeLayout
                        android:id="@+id/certification_Fan"
                        android:layout_width="@dimen/x60"
                        android:layout_height="match_parent"
                        android:background="@drawable/fanhui_bg">

                        <ImageView
                            android:layout_width="@dimen/x16"
                            android:layout_height="@dimen/x28"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="@dimen/x20"
                            android:layout_marginLeft="@dimen/x30"
                            android:background="@drawable/btn_back" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/x16"
                        android:text="会员认证信息表"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x32" />

                </RelativeLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:text="郑重提示：客户需仔细填写此表格，各项信息会与客户在结算银行开户的信息进行校验，如填写错误，可能导致客户认证失败！"
                    android:textSize="@dimen/x22"
                    android:textColor="@color/color_999999"
                    android:lineSpacingExtra="@dimen/x4"
                    android:layout_marginTop="@dimen/x20"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="姓名"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"/>
                    <EditText
                        android:id="@+id/certification_name"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:hint="输入您的真实姓名"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x116"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg"
                        android:singleLine="true"
                        android:textColorHint="@color/color_999999"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件类型"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/x70"
                        android:layout_marginRight="@dimen/x16"
                        >
                        <TextView
                            android:id="@+id/certification_type_text"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x70"
                            android:text="身份证"
                            android:textSize="@dimen/x26"
                            android:textColor="@color/name_se"
                            android:background="@drawable/tihuo_ed_bg"
                            android:layout_centerVertical="true"
                            android:gravity="center_vertical"
                            />
                        <LinearLayout
                            android:id="@+id/certification_type_btn"
                            android:layout_width="@dimen/x40"
                            android:layout_height="@dimen/x54"
                            android:layout_alignParentRight="true"
                            android:background="@drawable/item_bg"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/x2"
                            >
                            <ImageView
                                android:layout_width="@dimen/x20"
                                android:layout_height="@dimen/x16"
                                android:background="@drawable/xia_jiantou"
                                android:layout_marginRight="@dimen/x40"
                                android:layout_gravity="center_vertical"
                                />
                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x16"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件号码"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"/>
                    <EditText
                        android:id="@+id/certification_shenfenzheng"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:hint="输入您的身份证号"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x70"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg"
                        android:singleLine="true"
                        android:textColorHint="@color/color_999999"
                        android:gravity="center_vertical"
                        />

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1.请上传身份证正反面带有头像或国徽的扫描件或清晰照片"
                    android:textSize="@dimen/x22"
                    android:textColor="@color/color_999999"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:layout_marginTop="@dimen/x16"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="注：您的证件不会被其他网友看到，我们将严格保密，请放心上传"
                    android:textSize="@dimen/x22"
                    android:textColor="#C06102"
                    android:layout_marginRight="@dimen/x16"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginTop="@dimen/x4"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/x16">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="证件照片"
                        android:textSize="@dimen/x26"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x16"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x70"
                        android:layout_marginRight="@dimen/x18"
                        >
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:id="@+id/certification_shangchuan_zheng_img"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x140"
                                android:background="@drawable/zhengmian"
                                android:scaleType="fitXY"
                                />
                            <!--<TextView-->
                            <!--android:id="@+id/certification_shangchuan_zheng_btn"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="上传图片"-->
                            <!--android:textSize="@dimen/x12"-->
                            <!--android:textColor="@color/name_se"-->
                            <!--android:layout_marginTop="@dimen/x5"-->
                            <!--android:background="@drawable/shangchuan_anniu"-->
                            <!--/>-->
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x40"
                            android:orientation="vertical"
                            android:gravity="center"
                            >

                            <ImageView
                                android:id="@+id/certification_shangchuan_bei_img"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/x140"
                                android:background="@drawable/beimian"
                                android:scaleType="fitXY" />
                            <!--<TextView-->
                            <!--android:id="@+id/certification_shangchuan_bei_btn"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:text="上传图片"-->
                            <!--android:textSize="@dimen/x12"-->
                            <!--android:textColor="@color/name_se"-->
                            <!--android:layout_marginTop="@dimen/x5"-->
                            <!--android:background="@drawable/shangchuan_anniu"-->
                            <!--/>-->
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:layout_marginTop="@dimen/x16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:text="验证码:"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x26" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:layout_marginLeft="@dimen/x82"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg">

                        <EditText
                            android:id="@+id/certification_tu_yan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x26"
                            android:gravity="center_vertical"
                            />


                        <View
                            android:layout_width="@dimen/x2"
                            android:layout_height="@dimen/x40"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/x4"
                            android:background="@color/color_e5e5e5" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/x6"
                            android:paddingTop="@dimen/x6"
                            android:paddingLeft="@dimen/x12"
                            android:paddingRight="@dimen/x12"
                            >
                            <ImageView
                                android:id="@+id/certification_tu_yan_btn"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x90"
                    android:layout_marginTop="@dimen/x16"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x16"
                        android:text="手机验证码:"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x26" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:layout_marginLeft="@dimen/x30"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/tihuo_ed_bg">

                        <EditText
                            android:id="@+id/certification_duan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:background="@null"
                            android:hint="短信验证码"
                            android:inputType="number"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x26"
                            android:gravity="center_vertical"
                            />

                        <View
                            android:layout_width="@dimen/x2"
                            android:layout_height="@dimen/x40"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/x4"
                            android:background="@color/color_e5e5e5" />

                        <TextView
                            android:id="@+id/certification_duan_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="点击发送"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x24" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <Button
                        android:id="@+id/certification_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x16"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/congzhi_bg"
                        android:text="确认"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x28"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/x15"
                        />
                </RelativeLayout>

            </LinearLayout>

    </RelativeLayout>

</ScrollView>
