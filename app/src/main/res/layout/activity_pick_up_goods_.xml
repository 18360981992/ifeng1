<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Pick_up_goods_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian"
        >
        <RelativeLayout
            android:id="@+id/up_goods_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg"
            >
            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_back"
                android:layout_marginBottom="@dimen/x15"
                android:layout_marginLeft="@dimen/x10"
                />
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/up_goods_TabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/baise"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/baise"
            app:tabTextColor="@color/fengouxian"
            app:tabTextAppearance="@style/TabLayoutTextStyle"
            android:layout_toRightOf="@+id/up_goods_Fan"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x5"
            >

        </android.support.design.widget.TabLayout>

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/up_goods_FrameLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></FrameLayout>

</LinearLayout>
