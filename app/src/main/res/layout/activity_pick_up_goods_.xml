<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.tihuo.Pick_up_goods_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x130"
        android:background="@drawable/zichan_jianbian"
        >
        <RelativeLayout
            android:id="@+id/up_goods_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg"
            >
            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_back"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                />
        </RelativeLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/up_goods_TabLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/baise"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@color/baise"
            app:tabTextColor="@color/fengouxian"
            app:tabTextAppearance="@style/TabLayoutTextStyle1"
            android:layout_toRightOf="@+id/up_goods_Fan"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x10"
            >

        </android.support.design.widget.TabLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/up_goods_FrameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ></FrameLayout>

        <LinearLayout
            android:id="@+id/up_goods_zhuce_name_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >

            <ImageView
                android:id="@+id/up_goods_zhuce_name_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/up_goods_zhuce_name_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提货成功"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
