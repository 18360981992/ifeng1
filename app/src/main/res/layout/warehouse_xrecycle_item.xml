<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/item_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x4"
        android:paddingBottom="@dimen/x4"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="藏品代码："
            android:textSize="@dimen/x13"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x8"
            />
        <TextView
            android:id="@+id/warehouse_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6225898234"
            android:textSize="@dimen/x13"
            android:textColor="@color/name_se"
            />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            >

            <ImageView
                android:id="@+id/warehouse_img"
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x60"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x8"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x8"
                >
                <TextView
                    android:id="@+id/warehouse_shopping_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="世博四连体"
                    android:textSize="@dimen/x13"
                    android:textColor="@color/name_se"
                   />

                <TextView
                    android:id="@+id/warehouse_keyong_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用数量：10000"
                    android:textSize="@dimen/x11"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="@dimen/x12"
                   />

                <TextView
                    android:id="@+id/warehouse_dongjie_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="冻结数量：10000"
                    android:textSize="@dimen/x11"
                    android:textColor="@color/color_999999"
                    android:layout_marginTop="@dimen/x3"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x8"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            >
            <TextView
                android:id="@+id/warehouse_zhuanzeng"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x25"
                android:text="转赠"
                android:textSize="@dimen/x11"
                android:textColor="@color/zhuse"
                android:gravity="center"
                android:background="@drawable/jieshou_kuang"
                />
            <TextView
                android:id="@+id/warehouse_tihuo"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x25"
                android:text="提货"
                android:textSize="@dimen/x11"
                android:textColor="@color/color_999999"
                android:gravity="center"
                android:background="@drawable/jujue_kuang"
                android:layout_marginLeft="@dimen/x10"
                />


        </LinearLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fengouxian"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        android:layout_marginBottom="@dimen/x10"
        />
</LinearLayout>

