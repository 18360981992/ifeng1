<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/changku_item_bg"
    >
    <LinearLayout
        android:id="@+id/cangku"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x230"
        android:background="@drawable/zhuanzeng_list_bg"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/x20"
            >
            <TextView
                android:id="@+id/warehouse_shopping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="世博四连体"
                android:textSize="@dimen/x28"
                android:textColor="@color/color_666666"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/x15"
                android:lineSpacingExtra="@dimen/x4"
                />

            <TextView
                android:id="@+id/warehouse_shopping_cword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编号："
                android:textSize="@dimen/x26"
                android:textColor="@color/color_999999"
                android:layout_above="@+id/warehouse_shopping_name"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/warehouse_keyong_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="10000（枚）"
            android:textSize="@dimen/x28"
            android:textColor="@color/color_666666"
            android:gravity="end|center_vertical"
            android:layout_marginRight="@dimen/x20"
            />
    </LinearLayout>
    <View
        android:layout_below="@+id/cangku"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="@color/fengouxian"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/x2"-->
        <!--android:background="@color/fengouxian"-->
        <!--android:layout_marginLeft="@dimen/x16"-->
        <!--android:layout_marginRight="@dimen/x16"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--/>-->

    <LinearLayout
        android:id="@+id/warehouse_item_touming"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x230"
        android:background="@color/touming1"
        android:visibility="gone"
        android:layout_marginTop="@dimen/x30"
        android:layout_marginLeft="@dimen/x18"
        android:layout_marginRight="@dimen/x18"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="end|center_vertical"
            >
            <TextView
                android:id="@+id/warehouse_item_zhuanzeng"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:textSize="@dimen/x28"
                android:text="转赠"
                android:textColor="@color/zhuse"
                android:background="@drawable/list_changan"
                android:gravity="center"
                android:layout_marginRight="@dimen/x50"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/warehouse_item_tihuo"
                android:layout_width="@dimen/x90"
                android:layout_height="@dimen/x90"
                android:textSize="@dimen/x28"
                android:text="提货"
                android:textColor="@color/zhuse"
                android:background="@drawable/list_changan"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x50"
                />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>

