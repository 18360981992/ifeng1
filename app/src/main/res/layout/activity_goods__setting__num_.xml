<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ifeng_tech.treasuryyitong.ui.Goods_Setting_Num_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian"
        >
        <RelativeLayout
            android:id="@+id/goods_setting_num_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg"
            >
            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_back"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置数量"
            android:textSize="@dimen/x32"
            android:textColor="@color/baise"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:gravity="center"
        android:layout_marginTop="@dimen/x30"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x16"
            android:text="数量:"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x28" />

        <EditText
            android:id="@+id/goods_setting_num_shuliang"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x75"
            android:layout_marginLeft="@dimen/x30"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/tihuo_ed_bg"
            android:hint="请输入数量"
            android:singleLine="true"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x28"
            android:inputType="number"
            android:gravity="center_vertical"
            />
    </LinearLayout>

    <Button
        android:id="@+id/goods_setting_num_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x16"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:background="@drawable/congzhi_bg"
        android:text="确定"
        android:textColor="@color/baise"
        android:textSize="@dimen/x30"
        android:gravity="center"
        android:layout_marginTop="@dimen/x100"
        />

</LinearLayout>
