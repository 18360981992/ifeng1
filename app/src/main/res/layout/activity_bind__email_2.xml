<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/fengouxian"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Bind_Email_Activity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/bind_email_Fan2"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="绑定邮箱（设置）"
            android:textColor="@color/baise"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bind_email_youxiang2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮件已发送到: 850**02@qq.com请收到邮件后及时输入验证码"
                android:textSize="@dimen/x11"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginRight="@dimen/x8"
                android:layout_marginTop="@dimen/x20"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x45"
                android:layout_marginTop="@dimen/x18"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/x250"
                    android:layout_height="@dimen/x35"
                    android:background="@drawable/tihuo_ed_bg"
                    android:layout_centerInParent="true"
                    >

                    <EditText
                        android:id="@+id/bind_email_duan2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x13" />

                    <View
                        android:layout_width="@dimen/x1"
                        android:layout_height="@dimen/x20"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x2"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/bind_email_duan_btn2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="再发一封"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x12" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x30">
                <Button
                    android:id="@+id/bind_email_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x35"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x8"
                    android:layout_marginLeft="@dimen/x8"
                    android:layout_marginRight="@dimen/x8"
                    android:background="@drawable/congzhi_bg"
                    android:text="确认"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x14" />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bind_email_weitanchuan2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/bind_email_weitanchuan_img2"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="@dimen/x8"
                />
            <TextView
                android:id="@+id/bind_email_weitanchuan_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x8"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
