<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.bind_email.Bind_Email_Activity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/bind_email_Fan2"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/bind_email_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="绑定邮箱（设置）"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/bind_email_youxiang2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮件已发送到: 850**02@qq.com请收到邮件后及时输入验证码"
                android:textSize="@dimen/x24"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/x80"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x40"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x140"
                    android:background="@drawable/tihuo_ed_bg"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginRight="@dimen/x20"
                    >

                    <EditText
                        android:id="@+id/bind_email_duan2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="4"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x28"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="@dimen/x20"
                        />

                    <View
                        android:layout_width="@dimen/x2"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x4"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/bind_email_duan_btn2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="再发一封"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x26" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >
                <Button
                    android:id="@+id/bind_email_btn2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@drawable/congzhi_bg"
                    android:text="确认"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x30"
                    android:gravity="center"
                    />

                <Button
                    android:id="@+id/bind_email_btn2_xiayibu"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:layout_marginTop="@dimen/x15"
                    android:background="@drawable/congzhi_bg"
                    android:text="下一步"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x30"
                    android:gravity="center"
                    android:visibility="gone"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/bind_email_weitanchuan2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/bind_email_weitanchuan_img2"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/bind_email_weitanchuan_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>
    </ScrollView>
</LinearLayout>
