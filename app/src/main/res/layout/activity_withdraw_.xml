<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Withdraw_Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/withdraw_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="提现"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x35"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x80"
            android:layout_marginLeft="@dimen/x16"
            android:text="提现金额:"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x28"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginRight="@dimen/x16"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <EditText
                android:id="@+id/withdraw_qian"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x75"
                android:background="@drawable/tihuo_ed_bg"
                android:inputType="number"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x28"
                android:gravity="center_vertical"
                />

            <TextView
                android:id="@+id/withdraw_zuida_qian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                android:text="最大提现金额为：100"
                android:textColor="#E93438"
                android:textSize="@dimen/x22" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x30"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="选择提现渠道:"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x28"
            android:layout_marginLeft="@dimen/x16"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x15"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/zhifubao_fuxuan"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/x28"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@drawable/zhuce_hui"
                    />
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/zhifubao_img"
                    android:layout_marginLeft="@dimen/x15"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <ImageView
                    android:id="@+id/weixin_fuxuan"
                    android:layout_width="@dimen/x28"
                    android:layout_height="@dimen/x28"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x2"
                    android:background="@drawable/zhuce_hui"
                    />
                <ImageView
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x50"
                    android:background="@drawable/weixin_img"
                    android:layout_marginLeft="@dimen/x15"
                    />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/withdraw_xiayibu"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/congzhi_bg"
            android:text="下一步"
            android:textColor="@color/baise"
            android:textSize="@dimen/x28"
            android:gravity="center"
            />
    </RelativeLayout>
</LinearLayout>
    </ScrollView>
</LinearLayout>
