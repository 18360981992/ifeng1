<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/touming1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/x20"
        android:layout_centerInParent="true"
        >
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/color_eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="日"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="一"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="二"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="三"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="四"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="五"
                    android:textColor="@color/color_333333"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee"
                android:orientation="vertical"
                android:padding="@dimen/x1">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:gravity="center"
                    android:text="六"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/x12" />
            </LinearLayout>
            <View
                android:layout_width="@dimen/x1"
                android:layout_height="match_parent"
                android:background="@color/color_eeeeee" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x5"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/color_ffffff"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:layout_weight="1"
            android:background="@color/color_ffffff">

            <GridView
                android:id="@+id/list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ffffff"
                android:cacheColorHint="@android:color/transparent"
                android:fadingEdge="none"
                android:gravity="center"
                android:horizontalSpacing="@dimen/x1"
                android:listSelector="@android:color/transparent"
                android:numColumns="7"
                android:overScrollMode="never"
                android:scrollbars="none"
                android:stretchMode="columnWidth"
                android:verticalSpacing="@dimen/x3"></GridView>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/color_eeeeee" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x40"
            android:background="#ffffff"
            android:gravity="center"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/front_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawableLeft="@drawable/icon_left"
                android:drawablePadding="@dimen/x2"
                android:gravity="center"
                android:padding="@dimen/x8"
                android:text="上一月"
                android:textColor="#999999"
                android:textSize="@dimen/x10" />

            <TextView
                android:id="@+id/now_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10"
                android:text="2016-01-10"
                android:textColor="#333333"
                android:textSize="@dimen/x10"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/next_month"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="@dimen/x2"
                android:drawableRight="@drawable/icon_right"
                android:gravity="center"
                android:padding="@dimen/x8"
                android:text="下一月"
                android:textColor="#999999"
                android:textSize="@dimen/x10" />
            <TextView
                android:id="@+id/ok"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x25"
                android:layout_weight="1"
                android:background="@drawable/ok_bg"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ffffff"
                android:textSize="@dimen/x10"
                android:layout_marginRight="@dimen/x3"
                />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>