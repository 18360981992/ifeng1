<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!--未登录时显示的页面-->
    <RelativeLayout
        android:id="@+id/warehouse_fra_weidenglu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true"
            >
            <ImageView
                android:layout_width="@dimen/x100"
                android:layout_height="@dimen/x130"
                android:background="@drawable/cangku_null"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录后显示该页面"
                android:textSize="@dimen/x18"
                android:textColor="@color/color_999999"
                android:layout_marginTop="@dimen/x5"
                />
            <Button
                android:id="@+id/warehouse_fra_btn"
                android:layout_width="@dimen/x180"
                android:layout_height="@dimen/x50"
                android:text="确定登录"
                android:textSize="@dimen/x21"
                android:textColor="@color/baise"
                android:layout_marginRight="@dimen/x10"
                android:background="@drawable/congzhi_bg"
                android:layout_marginLeft="@dimen/x8"
                android:layout_marginTop="@dimen/x10"
                />
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/warehouse_fra_denglu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x35"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="名称"
                android:textSize="@dimen/x13"
                android:textColor="@color/name_se"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/x10"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="可用数量"
                android:textSize="@dimen/x13"
                android:textColor="@color/name_se"
                android:gravity="center"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="冻结数量"
                android:textSize="@dimen/x13"
                android:textColor="@color/name_se"
                android:gravity="end|center_vertical"
                android:layout_marginRight="@dimen/x10"
                />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_alignParentBottom="true"
            android:background="@color/fengouxian" />

        <com.ifeng_tech.treasuryyitong.pull.PullToRefreshScrollView
            android:id="@+id/warehouse_fra_pulltoscroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:id="@+id/wview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x8"/>

                <com.ifeng_tech.treasuryyitong.view.MyListView
                    android:id="@+id/warehouse_fra_MyListView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scrollbars="none"
                    android:divider="@null"
                    ></com.ifeng_tech.treasuryyitong.view.MyListView>

            </LinearLayout>
        </com.ifeng_tech.treasuryyitong.pull.PullToRefreshScrollView>

        <LinearLayout
            android:id="@+id/warehouse_fra_null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >
            <ImageView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x60"
                android:background="@drawable/zanwu_shuju"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="暂无数据"
                android:textColor="#999999"
                android:textSize="@dimen/x15"
                android:layout_marginTop="@dimen/x5"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
