<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:fillViewport="true"
    tools:context="com.ifeng_tech.treasuryyitong.ui.login.Setting_Pass_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            android:background="@drawable/zichan_jianbian">

            <RelativeLayout
                android:id="@+id/setting_Pass_Fan"
                android:layout_width="@dimen/x60"
                android:layout_height="match_parent"
                android:background="@drawable/fanhui_bg">

                <ImageView
                    android:layout_width="@dimen/x16"
                    android:layout_height="@dimen/x28"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x20"
                    android:layout_marginLeft="@dimen/x30"
                    android:background="@drawable/btn_back" />
            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/x16"
                android:text="设置密码"
                android:textColor="@color/baise"
                android:textSize="@dimen/x32" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x102"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x30"
                    android:layout_marginLeft="@dimen/x25"
                    />
                <EditText
                    android:id="@+id/setting_Pass_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:hint="8-12位字符"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x30"
                    android:textColorHint="@color/color_999999"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginRight="@dimen/x25"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    android:inputType="textPassword"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/fengouxian"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x16"
            android:gravity="center_vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="确认密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x30"
                    android:layout_marginLeft="@dimen/x25"
                    />
                <EditText
                    android:id="@+id/setting_Pass_zaici_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:hint="确认密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x30"
                    android:textColorHint="@color/color_999999"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/x60"
                    android:layout_marginRight="@dimen/x25"
                    android:inputType="textPassword"
                    android:maxLength="16"
                    android:singleLine="true"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="@color/fengouxian"
                android:layout_marginLeft="@dimen/x25"
                android:layout_marginRight="@dimen/x25"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center"
            android:layout_marginTop="@dimen/x20"
            android:paddingTop="@dimen/x6"
            android:paddingBottom="@dimen/x6"
            >
            <ImageView
                android:id="@+id/setting_Pass_fuxuan"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textSize="@dimen/x28"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x10"
                />

            <TextView
                android:id="@+id/setting_Pass_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="服务条款 免责声明 隐私保护"
                android:textSize="@dimen/x28"
                android:textColor="@color/zhuse"
                android:layout_marginLeft="@dimen/x6"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/setting_Pass_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x16"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/x240"
                android:background="@drawable/congzhi_bg"
                android:text="确认"
                android:textColor="@color/baise"
                android:textSize="@dimen/x30"
                android:gravity="center"
                />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
