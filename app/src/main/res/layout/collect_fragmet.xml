<?xml version="1.0" encoding="utf-8"?>

<!-- 征集-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <com.ifeng_tech.treasuryyitong.pull.PullToRefreshScrollView
        android:id="@+id/collect_pulltoscroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.stx.xhb.xbanner.XBanner
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/collect_XBanner"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x300"
                app:pointsPosition="CENTER"
                app:AutoPlayTime="1500"
                ></com.stx.xhb.xbanner.XBanner>

            <com.ifeng_tech.treasuryyitong.view.MyListView
                android:id="@+id/collect_MyListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:layout_marginTop="@dimen/x16"
                android:divider="@null"
                ></com.ifeng_tech.treasuryyitong.view.MyListView>

            <LinearLayout
                android:id="@+id/collect_null"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:visibility="gone"
                >
                <ImageView
                    android:layout_width="@dimen/x175"
                    android:layout_height="@dimen/x140"
                    android:background="@drawable/zanwu_shuju"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无数据"
                    android:textColor="#999999"
                    android:textSize="@dimen/x30"
                    android:layout_marginTop="@dimen/x10"
                    />
            </LinearLayout>
        </LinearLayout>
    </com.ifeng_tech.treasuryyitong.pull.PullToRefreshScrollView>



</LinearLayout>
