<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/baise"
    >

    <TextView
        android:id="@+id/donation_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x90"
        android:text="提货密码"
        android:textSize="@dimen/x28"
        android:textColor="@color/name_se"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x260"
        android:orientation="vertical"
        android:background="@color/baise"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                style="@style/textview_error_hint"
                android:visibility="invisible"
                android:text="非法字符"
                android:id="@+id/up_goods_zhuce_pass_tishi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设置提货密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26"
                    android:layout_marginLeft="@dimen/x16"
                    />

                <EditText
                    android:id="@+id/up_goods_zhuce_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:hint="请设置8位数字提货密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26"
                    android:maxLength="8"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginRight="@dimen/x16"
                    android:singleLine="true"
                    android:gravity="end|center_vertical"
                    android:inputType="numberPassword"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x2"
            android:background="@color/fengouxian1"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/x16">

            <TextView
                style="@style/textview_error_hint"
                android:visibility="invisible"
                android:text="两次输入不一致"
                android:id="@+id/up_goods_zhuce_zai_tishi"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="确认密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26" />

                <EditText
                    android:id="@+id/up_goods_zhuce_zai"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:hint="请再次输入密码"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x16"
                    android:inputType="numberPassword"
                    android:maxLength="8"
                    android:singleLine="true"
                    android:gravity="end|center_vertical"
                    android:background="@null"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/x16"
        android:layout_marginTop="@dimen/x30"
        >
        <Button
            android:id="@+id/up_goods_zhuce_dialog_queren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x70"
            android:text="确认"
            android:textSize="@dimen/x28"
            android:textColor="@color/baise"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/congzhi_bg"
            android:gravity="center"
            />
        <Button
            android:id="@+id/up_goods_zhuce_dialog_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x70"
            android:text="取消"
            android:textSize="@dimen/x28"
            android:textColor="@color/baise"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/tixian_bg"
            android:layout_marginLeft="@dimen/x16"
            android:gravity="center"
            />
    </LinearLayout>

</LinearLayout>
