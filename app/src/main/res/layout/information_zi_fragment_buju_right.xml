<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x86"
    android:background="@drawable/item_bg"
    >

    <RelativeLayout
        android:layout_width="@dimen/x220"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/x8"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/information_zi_fragment_buju_right_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="子栏目"
                android:textSize="@dimen/x12"
                android:textColor="@color/zhuse"/>
            <TextView
                android:id="@+id/information_zi_fragment_buju_right_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\t\t\t\t这是内容。这是内容。这是内容。这是内容。"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:lineSpacingMultiplier="1.1"
                />
        </RelativeLayout>

        <TextView
            android:id="@+id/information_zi_fragment_buju_right_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-02"
            android:textSize="@dimen/x10"
            android:textColor="@color/name_se"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <ImageView
        android:id="@+id/information_zi_fragment_buju_right_img"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/x70"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/x8"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/fengouxian1"
        android:layout_marginLeft="@dimen/x8"
        android:layout_marginRight="@dimen/x8"
        />

</RelativeLayout>
