<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_bg"
    android:layout_margin="@dimen/x80"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70">
        <RelativeLayout
            android:id="@+id/donation_zf_dialog_quxiao"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:background="@drawable/item_bg"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x15"
            >
            <ImageView
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:background="@drawable/zhuanzeng_quxiao"
                android:layout_marginLeft="@dimen/x20"
                android:layout_centerInParent="true"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付"
            android:textSize="@dimen/x30"
            android:textColor="@color/name_se"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        />

    <TextView
        android:id="@+id/donation_zf_zongjia"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x80"
        android:text="￥0.00"
        android:textSize="@dimen/x32"
        android:textColor="@color/name_se"
        android:gravity="center"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        />

    <LinearLayout
        android:id="@+id/donation_zf_dialog_keyong"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x40"
        >
        <ImageView
            android:id="@+id/donation_zf_dialog_keyong_img"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            />
        <TextView
            android:id="@+id/donation_zf_dialog_keyong_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="账户余额（￥0.00）"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/x26"
            android:layout_marginLeft="@dimen/x16"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        />

    <LinearLayout
        android:id="@+id/donation_zf_dialog_zhifubao"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x70"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/x40"
        >

        <ImageView
            android:id="@+id/donation_zf_dialog_zhifubao_img"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            />
        <TextView
            android:id="@+id/donation_zf_dialog_zhifubao_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付宝"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/x26"
            android:layout_marginLeft="@dimen/x16"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        />

    <Button
        android:id="@+id/donation_zf_dialog_queren"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:text="确认"
        android:textSize="@dimen/x32"
        android:textColor="@color/baise"
        android:layout_marginLeft="@dimen/x100"
        android:layout_marginRight="@dimen/x100"
        android:layout_marginTop="@dimen/x40"
        android:layout_marginBottom="@dimen/x16"
        android:background="#698BF9"
        android:gravity="center"
        />
</LinearLayout>
