<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/fengouxian">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x4"
        android:background="@color/baise">
        <View
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x16"
            android:background="@color/zhuse"
            android:layout_marginLeft="@dimen/x8"
            android:layout_gravity="center"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="征集"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x15"
            android:layout_marginLeft="@dimen/x8"
            android:gravity="center"/>

    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_zhengji_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x8"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
