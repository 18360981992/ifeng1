<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:id="@+id/home_zhengji_RelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@drawable/item_bg">
        <View
            android:id="@+id/view"
            android:layout_width="@dimen/x3"
            android:layout_height="@dimen/x16"
            android:background="@color/zhuse"
            android:layout_marginLeft="@dimen/x8"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="征集"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x15"
            android:layout_marginLeft="@dimen/x8"
            android:layout_toRightOf="@id/view"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:layout_width="@dimen/x8"
            android:layout_height="@dimen/x12"
            android:background="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x8"
            />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_zhengji_RecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:overScrollMode="never"
        ></android.support.v7.widget.RecyclerView>
</LinearLayout>
