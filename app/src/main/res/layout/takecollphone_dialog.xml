<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x350"
    android:orientation="vertical"
    android:background="@drawable/common_dialog_bg"
    android:layout_margin="@dimen/x80"
    android:paddingBottom="@dimen/x15">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5">
        <TextView
            android:id="@+id/dtext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="是否要打电话给客服？"
            android:textSize="@dimen/x30"
            android:textColor="@color/name_se"
            android:layout_centerInParent="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（服务时间：周一至周五\n9:00-18:00）"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/x4"
            android:textSize="@dimen/x26"
            android:textColor="@color/color_999999"
            android:layout_below="@+id/dtext"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/x8"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/takeCollPhoneDialog_queren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="确认"
            android:textSize="@dimen/x30"
            android:textColor="@color/zhuse"
            android:gravity="center"
            android:background="@drawable/item_bg"
            />
        <View
            android:layout_width="1px"
            android:layout_height="@dimen/x40"
            android:background="@color/zhuse"
            />
        <TextView
            android:id="@+id/takeCollPhoneDialog_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="@dimen/x30"
            android:textColor="@color/zhuse"
            android:gravity="center"
            android:background="@drawable/item_bg"
            />


    </LinearLayout>


</LinearLayout>
