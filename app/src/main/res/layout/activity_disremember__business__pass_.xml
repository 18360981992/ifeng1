<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.yewu_pass.Disremember_Business_Pass_Activity">

    <RelativeLayout
        android:id="@+id/authenticate_Details_Toobar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian"
        >
        <RelativeLayout
            android:id="@+id/disremember_business_pass_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg"
            >
            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:background="@drawable/btn_back"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="绑定邮箱（设置）"
            android:textSize="@dimen/x32"
            android:textColor="@color/baise"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/disremember_business_pass_youxiang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="邮件已发送到: 850**02@qq.com请收到邮件后及时输入验证码"
                android:textSize="@dimen/x22"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:layout_marginLeft="@dimen/x16"
                android:layout_marginRight="@dimen/x16"
                android:layout_marginTop="@dimen/x40"
                />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:layout_marginTop="@dimen/x36"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="@dimen/x500"
                    android:layout_height="@dimen/x70"
                    android:background="@drawable/tihuo_ed_bg"
                    android:layout_centerInParent="true"
                    >

                    <EditText
                        android:id="@+id/disremember_business_pass_duan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.6"
                        android:background="@null"
                        android:hint="请输入验证码"
                        android:inputType="number"
                        android:maxLength="6"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x26"
                        android:gravity="center_vertical"
                        />

                    <View
                        android:layout_width="@dimen/x2"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x4"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/disremember_business_pass_duan_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="再发一封"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x24" />
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/x60">
                <Button
                    android:id="@+id/disremember_business_pass_btn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/congzhi_bg"
                    android:text="确认"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x28"
                    android:gravity="center"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/disremember_business_pass_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/disremember_business_pass_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/disremember_business_pass_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>
</ScrollView>
</LinearLayout>
