<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x8"
        >
        <TextView
            android:id="@+id/entrust_list_item_danhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2568974156334342342423"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x16"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/x10"
        >
        <TextView
            android:id="@+id/entrust_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="王二"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x16"
            />
    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        >
        <TextView
            android:id="@+id/entrust_list_item_pingtai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="北交所福丽特邮币卡交易平台"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x16"
            />

        <TextView
            android:id="@+id/entrust_list_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2012-12-13"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_marginRight="@dimen/x16"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x5"
        android:paddingTop="@dimen/x6"
        android:paddingBottom="@dimen/x6"
        >
        <TextView
            android:id="@+id/entrust_list_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待处理"
            android:textSize="@dimen/x24"
            android:textColor="@color/name_se"
            android:layout_marginRight="@dimen/x16"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x2"
        android:background="@color/fengouxian1"
        android:layout_marginLeft="@dimen/x16"
        android:layout_marginRight="@dimen/x16"
        android:layout_marginTop="@dimen/x15"
        android:layout_alignParentBottom="true"/>


</LinearLayout>
