<?xml version="1.0" encoding="utf-8"?>
<!-- 转赠 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Donation_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/donation_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="转赠"
            android:textColor="@color/baise"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:gravity="center"
            android:layout_marginTop="@dimen/x15"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="对方交易会员代码"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <EditText
                android:id="@+id/donation_huiyuan_word"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:hint="请输入对方交易会员代码"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/tihuo_ed_bg"
                android:inputType="number"
                android:singleLine="true"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藏品代码"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <EditText
                android:id="@+id/donation_cangpin_wrod"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:hint="请输入藏品代码"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/tihuo_ed_bg"
                android:singleLine="true"
                android:inputType="number"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藏品名称"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <EditText
                android:id="@+id/donation_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:hint="请输入藏品名称"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/tihuo_ed_bg"
                android:singleLine="true"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转赠数量"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x8">
                <EditText
                    android:id="@+id/donation_shuliang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x35"
                    android:textSize="@dimen/x12"
                    android:textColor="@color/name_se"
                    android:background="@drawable/tihuo_ed_bg"
                    android:text="1"
                    android:inputType="number"
                    android:singleLine="true"
                    />
                <TextView
                    android:id="@+id/donation_zuidae"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最大转赠数量:1200"
                    android:textSize="@dimen/x10"
                    android:textColor="#E93438"
                    android:layout_marginTop="@dimen/x2"
                    />
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <TextView
                android:id="@+id/donation_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x71"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x50"
            android:gravity="center_vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务密码"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x8"/>
            <EditText
                android:id="@+id/donation_yewu_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:layout_marginLeft="@dimen/x58"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/tihuo_ed_bg"
                android:hint="请输入业务密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x12"
                android:maxLength="10"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/donation_tijiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x35"
                android:text="提交"
                android:textSize="@dimen/x14"
                android:textColor="@color/baise"
                android:layout_marginRight="@dimen/x8"
                android:background="@drawable/congzhi_bg"
                android:layout_marginLeft="@dimen/x8"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x8"
                />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/donation_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/donation_weitanchuan_img"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="@dimen/x8"
                />
            <TextView
                android:id="@+id/donation_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转赠成功"
                android:textColor="@color/baise"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x8"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
