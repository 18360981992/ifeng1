<?xml version="1.0" encoding="utf-8"?>
<!-- 转赠 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Donation_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/donation_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="转赠"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/baise"
                android:layout_marginLeft="@dimen/x15"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginTop="@dimen/x35"
                >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="会员账户"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26" />

                <ImageView
                    android:id="@+id/donation_saoyisao"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:background="@drawable/sao_hui"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/x20"
                    />


                <EditText
                    android:id="@+id/donation_huiyuan_word"
                    android:layout_width="@dimen/x300"
                    android:layout_height="@dimen/x70"
                    android:layout_marginRight="@dimen/x20"
                    android:hint="请输入会员账户"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x26"
                    android:background="@null"
                    android:layout_toLeftOf="@+id/donation_saoyisao"
                    android:gravity="center|right"
                    android:focusable="true"
                    android:layout_centerVertical="true"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/fengouxian1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"/>

            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="藏品代码"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x16"
                    android:layout_centerVertical="true"
                    />
                <EditText
                    android:id="@+id/donation_cangpin_wrod"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:hint="请输入藏品代码"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:layout_marginRight="@dimen/x20"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="10"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x1"
                    android:background="@color/fengouxian1"
                    android:layout_alignParentBottom="true"
                    android:layout_marginRight="@dimen/x15"
                    android:layout_marginLeft="@dimen/x15"/>
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="藏品名称"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x16"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/donation_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:hint="请输入藏品名称"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:layout_marginRight="@dimen/x20"
                android:singleLine="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center_vertical|right"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/fengouxian1"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x130"
            >
            <TextView
                android:id="@+id/shu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转赠数量"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x16"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/donation_zuidae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="最大可转赠数量为:0"
                android:textSize="@dimen/x20"
                android:textColor="#E93438"
                android:layout_marginTop="@dimen/x6"
                android:layout_marginLeft="@dimen/x16"
                android:layout_below="@+id/shu"
                />

                <EditText
                    android:id="@+id/donation_shuliang"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x70"
                    android:textSize="@dimen/x26"
                    android:textColor="@color/name_se"
                    android:text="1"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_marginRight="@dimen/x20"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical|right"
                    android:background="@null"
                    />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/fengouxian1"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手续费"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x16"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/donation_danjia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥0.00"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:textStyle="bold"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x20"
                android:background="@null"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x1"
                android:background="@color/fengouxian1"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="@dimen/x15"
                android:layout_marginLeft="@dimen/x15"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x120"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="业务密码"
                android:textSize="@dimen/x26"
                android:textColor="@color/name_se"
                android:layout_marginLeft="@dimen/x16"
                android:layout_centerVertical="true"
                />
            <EditText
                android:id="@+id/donation_yewu_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:layout_marginRight="@dimen/x20"
                android:hint="请输入业务密码"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x26"
                android:maxLength="12"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical|right"
                android:background="@null"
                />
        </RelativeLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Button
                android:id="@+id/donation_tijiao"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:text="提交"
                android:textSize="@dimen/x28"
                android:textColor="@color/baise"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/congzhi_bg"
                android:layout_marginLeft="@dimen/x16"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x16"
                android:gravity="center"
                />
        </RelativeLayout>
        </LinearLayout>
    </ScrollView>

        <LinearLayout
            android:id="@+id/donation_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/donation_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/donation_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="转赠成功"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
