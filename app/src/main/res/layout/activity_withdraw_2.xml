<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.zhifu_chongzhi.Withdraw_Activity2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/withdraw_Fan2"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="提现"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:gravity="center"
                android:layout_marginTop="@dimen/x35"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text=" 提现账户:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28" />

                <EditText
                    android:id="@+id/withdraw_zhanghao2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x75"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg"
                    android:hint=" 请输入提现账户"
                    android:singleLine="true"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28"
                    android:gravity="center_vertical"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x90"
                android:gravity="center"
                android:layout_marginTop="@dimen/x15"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x16"
                    android:text="业务密码:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28" />

                <EditText
                    android:id="@+id/withdraw_yewu_pass"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x75"
                    android:layout_marginLeft="@dimen/x97"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg"
                    android:hint="请输入业务密码"
                    android:singleLine="true"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28"
                    android:gravity="center_vertical"
                    android:maxLength="6"
                    android:inputType="numberPassword"
                    />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/x16"
                    android:layout_alignParentBottom="true"
                    >
                    <Button
                        android:id="@+id/withdraw_queren"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/x70"
                        android:text="确认"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/baise"
                        android:layout_marginLeft="@dimen/x20"
                        android:background="@drawable/congzhi_bg"
                        android:gravity="center"
                        />
                    <Button
                        android:id="@+id/withdraw_quxiao"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="@dimen/x70"
                        android:text="取消"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/baise"
                        android:layout_marginRight="@dimen/x20"
                        android:background="@drawable/tixian_bg"
                        android:layout_marginLeft="@dimen/x16"
                        android:gravity="center"
                        />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/withdraw_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/withdraw_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/withdraw_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="提现成功"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
    </RelativeLayout>

    </ScrollView>
</LinearLayout>
