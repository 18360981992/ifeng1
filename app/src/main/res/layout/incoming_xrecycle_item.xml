<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x100"
    android:orientation="vertical"
    android:background="@drawable/item_bg"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/fengouxian1"
        android:paddingTop="@dimen/x3"
        android:paddingBottom="@dimen/x3"
        >
        <TextView
            android:id="@+id/incoming_trade_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福利特"
            android:textSize="@dimen/x12"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x8"
            />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            >
            <TextView
                android:id="@+id/incoming_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="62223588646"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                />
            <TextView
                android:id="@+id/incoming_shopping_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="世博四连体"
                android:textSize="@dimen/x12"
                android:textColor="@color/name_se"
                android:layout_marginTop="@dimen/x8"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/incoming_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20"
            android:textSize="@dimen/x12"
            android:textColor="@color/name_se"
            android:layout_centerInParent="true"
            />

        <TextView
            android:id="@+id/incoming_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待审核"
            android:textSize="@dimen/x12"
            android:textColor="@color/name_se"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x8"/>

        <TextView
            android:id="@+id/incoming_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-05-10 09:53:06"
            android:textSize="@dimen/x10"
            android:textColor="@color/name_se"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x8"
            android:layout_marginBottom="@dimen/x8"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

</LinearLayout>
