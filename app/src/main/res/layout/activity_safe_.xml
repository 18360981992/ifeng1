<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Safe_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/safe_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="安全保护"
            android:textColor="@color/baise"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/safe_chongzhi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:background="@drawable/chongzhi"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置密码"
            android:textSize="@dimen/x13"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img1"
            />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x13"
            android:background="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/fengouxian1"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/safe_zhaohui"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">

        <ImageView
            android:id="@+id/img2"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:background="@drawable/zhaohui"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="找回密码"
            android:textSize="@dimen/x13"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img2"
            />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x13"
            android:background="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/fengouxian1"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/safe_geng_shouji"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <ImageView
            android:id="@+id/img3"
            android:layout_width="@dimen/x15"
            android:layout_height="@dimen/x15"
            android:background="@drawable/genggai"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x8"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更改绑定手机号"
            android:textSize="@dimen/x13"
            android:textColor="@color/name_se"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/img3"
            />

        <ImageView
            android:layout_width="@dimen/x10"
            android:layout_height="@dimen/x13"
            android:background="@drawable/jiantou"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            android:background="@color/fengouxian1"
            android:layout_alignParentBottom="true"
            />

    </RelativeLayout>



</LinearLayout>
