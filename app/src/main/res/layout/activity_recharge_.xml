<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F7F7"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.zhifu_chongzhi.Recharge_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/recharge_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="充值"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x15"
            />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x60"
                    android:text="充值金额:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x90"
                    android:layout_marginTop="@dimen/x50">

                    <TextView
                        android:id="@+id/recharge_wushi"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="50"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/recharge_sanshi"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="30"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/recharge_yibai"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="100"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x90"
                    android:layout_marginTop="@dimen/x40">

                    <TextView
                        android:id="@+id/recharge_wubai"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="500"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/recharge_sanbai"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="300"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28" />

                    <TextView
                        android:id="@+id/recharge_qita"
                        android:layout_width="@dimen/x140"
                        android:layout_height="@dimen/x70"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/chongzhi_kuang"
                        android:gravity="center"
                        android:text="其他"
                        android:textColor="@color/zhuse"
                        android:textSize="@dimen/x28" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x73"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginRight="@dimen/x90"
                    android:layout_marginTop="@dimen/x40"
                    android:background="@drawable/chongzhi_kuang">

                    <EditText
                        android:id="@+id/recharge_chongzhi_qian"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_centerVertical="true"
                        android:background="@null"
                        android:hint="0.00"
                        android:textColorHint="#FFACBBEF"
                        android:text="0.00"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/zhuse"
                        android:layout_alignParentRight="true"
                        android:inputType="number|numberDecimal"
                        android:gravity="center_vertical"
                        android:paddingRight="@dimen/x32"
                        android:paddingLeft="@dimen/x2"
                        android:cursorVisible="false"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="￥"
                        android:textSize="@dimen/x28"
                        android:textColor="@color/zhuse"
                        android:layout_toLeftOf="@+id/recharge_chongzhi_qian"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="充值渠道:"
                    android:textColor="@color/name_se"
                    android:textSize="@dimen/x28"
                    android:layout_marginLeft="@dimen/x20"
                    android:layout_marginTop="@dimen/x60"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/x90"
                    android:layout_marginTop="@dimen/x40"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        >

                        <LinearLayout
                            android:id="@+id/recharge_zhifubao_fuxuan"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical">
                            <ImageView
                                android:id="@+id/recharge_zhifubao_img"
                                android:layout_width="@dimen/x30"
                                android:layout_height="@dimen/x30"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/x2"
                                android:background="@drawable/zhuce_hui"
                                />
                            <ImageView
                                android:layout_width="@dimen/x60"
                                android:layout_height="@dimen/x60"
                                android:background="@drawable/zhifubao_img"
                                android:layout_marginLeft="@dimen/x15"
                                />
                        </LinearLayout>

                    </LinearLayout>
                    <!--<LinearLayout-->
                        <!--android:layout_width="0dp"-->
                        <!--android:layout_weight="2"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:gravity="center_vertical"-->
                        <!--&gt;-->
                        <!--<LinearLayout-->
                            <!--android:id="@+id/recharge_weixin_fuxuan"-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="match_parent"-->
                            <!--android:gravity="center_vertical">-->
                            <!--<ImageView-->
                                <!--android:id="@+id/recharge_weixin_img"-->
                                <!--android:layout_width="@dimen/x30"-->
                                <!--android:layout_height="@dimen/x30"-->
                                <!--android:layout_gravity="center_vertical"-->
                                <!--android:layout_marginTop="@dimen/x2"-->
                                <!--android:background="@drawable/zhuce_hui"-->
                                <!--/>-->
                            <!--<ImageView-->
                                <!--android:layout_width="@dimen/x60"-->
                                <!--android:layout_height="@dimen/x60"-->
                                <!--android:background="@drawable/weixin_img"-->
                                <!--android:layout_marginLeft="@dimen/x15"-->
                                <!--/>-->

                        <!--</LinearLayout>-->

                    <!--</LinearLayout>-->
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:id="@+id/recharge_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x70"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x16"
                        android:layout_marginLeft="@dimen/x16"
                        android:layout_marginRight="@dimen/x16"
                        android:background="@drawable/congzhi_bg"
                        android:gravity="center"
                        android:text="确认"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x29" />

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/recharge_weitanchuan"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:background="@color/weitanchuang"
                android:gravity="center_vertical"
                android:visibility="invisible"
                >
                <ImageView
                    android:id="@+id/recharge_weitanchuan_img"
                    android:layout_width="@dimen/x40"
                    android:layout_height="@dimen/x40"
                    android:layout_marginLeft="@dimen/x16"
                    />
                <TextView
                    android:id="@+id/recharge_weitanchuan_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功"
                    android:textColor="@color/baise"
                    android:textSize="@dimen/x28"
                    android:layout_marginLeft="@dimen/x16"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</LinearLayout>
