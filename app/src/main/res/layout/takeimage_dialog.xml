<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x380"
    android:background="@drawable/common_dialog_bg"
    android:layout_margin="@dimen/x80"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        >

        <ImageView
            android:id="@+id/takeImage_Dialog_img"
            android:layout_width="@dimen/x250"
            android:layout_height="@dimen/x80"
            android:scaleType="fitXY"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x70"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x10"
            >
            <EditText
                android:id="@+id/takeImage_Dialog_ed1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:text=""
                android:textSize="@dimen/x30"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:maxLength="1"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:digits="@string/filter_vcode"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#D2D2D2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x10"
            >
            <EditText
                android:id="@+id/takeImage_Dialog_ed2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:text=""
                android:textSize="@dimen/x30"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:maxLength="1"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:digits="@string/filter_vcode"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#D2D2D2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x10"
            >
            <EditText
                android:id="@+id/takeImage_Dialog_ed3"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:text=""
                android:textSize="@dimen/x30"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:maxLength="1"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:digits="@string/filter_vcode"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#D2D2D2"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="@dimen/x10"
            >
            <EditText
                android:id="@+id/takeImage_Dialog_ed4"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x60"
                android:text=""
                android:textSize="@dimen/x30"
                android:textColor="@color/name_se"
                android:gravity="center"
                android:maxLength="1"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number"
                android:digits="@string/filter_vcode"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/x2"
                android:background="#D2D2D2"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        >
        <Button
            android:id="@+id/takeImage_Dialog_btn"
            android:layout_width="@dimen/x210"
            android:layout_height="@dimen/x70"
            android:text="чбошод"
            android:textSize="@dimen/x28"
            android:textColor="@color/baise"
            android:gravity="center"
            android:background="@color/daanniu"
            />
    </LinearLayout>

</LinearLayout>
