<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x85"
    android:background="@drawable/item_bg"
    >

    <ImageView
        android:id="@+id/collect_img"
        android:layout_width="@dimen/x70"
        android:layout_height="@dimen/x70"
        android:layout_marginLeft="@dimen/x8"
        android:layout_centerVertical="true"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/x15"
        android:layout_marginLeft="@dimen/x5"
        android:layout_gravity="bottom"
        android:layout_toRightOf="@+id/collect_img"
        android:layout_marginTop="@dimen/x8"
        >
        <TextView
            android:id="@+id/collect_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="世博四连体"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x12"
            android:layout_marginTop="@dimen/x2"
            />
        <TextView
            android:id="@+id/collect_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="福利特寄卖商城"
            android:textSize="@dimen/x10"
            android:textColor="@color/text_se"
            android:layout_marginTop="@dimen/x8"

            />
        <TextView
            android:id="@+id/collect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="托管进度10/20"
            android:textSize="@dimen/x10"
            android:textColor="@color/zhuse_ziti"
            android:layout_marginTop="@dimen/x2"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/x45"
        android:layout_height="@dimen/x26"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x10"
        >
        <ImageView
            android:id="@+id/collect_imgflag"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x18"
            />
    </LinearLayout>



</RelativeLayout>
