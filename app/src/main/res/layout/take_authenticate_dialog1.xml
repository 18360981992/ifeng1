<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x460"
    android:background="@color/baise"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:layout_marginTop="@dimen/x20"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x90"
            android:text="预约数量:"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x26"
            android:layout_marginLeft="@dimen/x16"
            android:gravity="center_vertical"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x90"
            android:layout_marginRight="@dimen/x16"
            android:orientation="vertical"
            android:layout_gravity="center_vertical"
            >

            <EditText
                android:id="@+id/take_Authenticate_Dialog1_shuliang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:background="@drawable/tihuo_ed_bg"
                android:inputType="number"
                android:singleLine="true"
                android:text="1"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x26"
                android:hint="请输入数量"
                android:gravity="center_vertical"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x4"
                >
                <TextView
                    android:id="@+id/take_Authenticate_Dialog1_zuida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="剩余预约数量:0"
                    android:textColor="#E93438"
                    android:textSize="@dimen/x20"
                    android:inputType="number"
                    android:singleLine="true"/>
                <TextView
                    android:id="@+id/take_Authenticate_Dialog1_zuixiao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="最小预约数量:0"
                    android:textColor="#E93438"
                    android:textSize="@dimen/x20"
                    android:inputType="number"
                    android:singleLine="true"
                    android:layout_marginLeft="@dimen/x20"
                    />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x30"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手续费:"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x26"
            android:layout_marginLeft="@dimen/x16"
            />
        <TextView
            android:id="@+id/take_Authenticate_Dialog1_shouxufei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="￥0.00"
            android:textColor="@color/name_se"
            android:textSize="@dimen/x26"
            android:layout_marginLeft="@dimen/x116"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x90"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/x15"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/x16"
                android:text="业务密码:"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x26" />

            <EditText
                android:id="@+id/take_Authenticate_Dialog1_yewu_pass"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x70"
                android:layout_marginLeft="@dimen/x90"
                android:layout_marginRight="@dimen/x16"
                android:background="@drawable/tihuo_ed_bg"
                android:hint="请输入业务密码"
                android:inputType="numberPassword"
                android:singleLine="true"
                android:textColor="@color/name_se"
                android:textSize="@dimen/x26"
                android:maxLength="6"
                android:gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/x16"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:id="@+id/take_Authenticate_Dialog1_queren"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x70"
            android:text="确认"
            android:textSize="@dimen/x28"
            android:textColor="@color/baise"
            android:layout_marginLeft="@dimen/x20"
            android:background="@drawable/congzhi_bg"
            android:gravity="center"
            />
        <Button
            android:id="@+id/take_Authenticate_Dialog1_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/x70"
            android:text="取消"
            android:textSize="@dimen/x28"
            android:textColor="@color/baise"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/tixian_bg"
            android:layout_marginLeft="@dimen/x16"
            android:gravity="center"
            />
    </LinearLayout>
</RelativeLayout>
