<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Bind_Email_Activity1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x60"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/bind_email_Fan"
            android:layout_width="@dimen/x30"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x8"
                android:layout_height="@dimen/x14"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x8"
            android:text="绑定邮箱（设置）"
            android:textColor="@color/baise"
            android:textSize="@dimen/x16" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/x30"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="邮箱地址"
                        android:textSize="@dimen/x13"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x8"/>
                    <EditText
                        android:id="@+id/bind_email_youxiang"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x35"
                        android:hint="请输入邮箱地址"
                        android:textSize="@dimen/x13"
                        android:textColor="@color/name_se"
                        android:layout_marginLeft="@dimen/x28"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@drawable/tihuo_ed_bg"
                        android:singleLine="true"
                        android:textColorHint="@color/color_999999"
                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x40"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center_vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:text="手机号码"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x13" />

                    <TextView
                        android:id="@+id/bind_email_shoujihao"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x28"
                        android:text="183*****992"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x13"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:text="验证码"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x35"
                        android:layout_marginLeft="@dimen/x41"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@drawable/tihuo_ed_bg">

                        <EditText
                            android:id="@+id/bind_email_tu_yan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:background="@null"
                            android:hint="请输入验证码"
                            android:maxLength="4"
                            android:singleLine="true"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x13"
                            />

                        <View
                            android:layout_width="@dimen/x1"
                            android:layout_height="@dimen/x20"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/x2"
                            android:background="@color/color_e5e5e5" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:paddingBottom="@dimen/x3"
                            android:paddingTop="@dimen/x3"
                            android:paddingLeft="@dimen/x6"
                            android:paddingRight="@dimen/x6"
                            >
                            <ImageView
                                android:id="@+id/bind_email_tu_yan_img"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:background="@drawable/tu_yan"
                                />
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x45"
                    android:layout_marginTop="@dimen/x8"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/x8"
                        android:text="短信验证码"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x13" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x35"
                        android:layout_marginLeft="@dimen/x15"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@drawable/tihuo_ed_bg">

                        <EditText
                            android:id="@+id/bind_email_duan"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1.3"
                            android:background="@null"
                            android:hint="请输入短信验证码"
                            android:inputType="number"
                            android:maxLength="6"
                            android:singleLine="true"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x13" />

                        <View
                            android:layout_width="@dimen/x1"
                            android:layout_height="@dimen/x20"
                            android:layout_gravity="center_vertical"
                            android:layout_margin="@dimen/x2"
                            android:background="@color/color_e5e5e5" />

                        <TextView
                            android:id="@+id/bind_email_duan_btn"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="点击发送"
                            android:textColor="@color/name_se"
                            android:textSize="@dimen/x12" />
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/x30">
                    <Button
                        android:id="@+id/bind_email_btn"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x35"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="@dimen/x8"
                        android:layout_marginLeft="@dimen/x8"
                        android:layout_marginRight="@dimen/x8"
                        android:background="@drawable/congzhi_bg"
                        android:text="下一步"
                        android:textColor="@color/baise"
                        android:textSize="@dimen/x14" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bind_email_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/bind_email_weitanchuan_img"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:layout_marginLeft="@dimen/x8"
                />
            <TextView
                android:id="@+id/bind_email_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设置失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x14"
                android:layout_marginLeft="@dimen/x8"/>

        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
