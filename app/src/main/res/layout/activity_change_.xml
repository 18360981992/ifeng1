<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/baise"
    tools:context="com.ifeng_tech.treasuryyitong.ui.my.Change_Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:background="@drawable/zichan_jianbian">

        <RelativeLayout
            android:id="@+id/change_Fan"
            android:layout_width="@dimen/x60"
            android:layout_height="match_parent"
            android:background="@drawable/fanhui_bg">

            <ImageView
                android:layout_width="@dimen/x16"
                android:layout_height="@dimen/x28"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/x20"
                android:layout_marginLeft="@dimen/x30"
                android:background="@drawable/btn_back" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/x16"
            android:text="手机号绑定"
            android:textColor="@color/baise"
            android:textSize="@dimen/x32" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="输入新手机号:"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x16"/>
                <EditText
                    android:id="@+id/change_new_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:hint="输入新手机号"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x40"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg"
                    android:singleLine="true"
                    android:inputType="number"
                    android:maxLength="11"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/x80"
                android:layout_marginTop="@dimen/x20"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="验证码:"
                    android:textSize="@dimen/x28"
                    android:textColor="@color/name_se"
                    android:layout_marginLeft="@dimen/x16"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x60"
                    android:layout_marginLeft="@dimen/x124"
                    android:layout_marginRight="@dimen/x16"
                    android:background="@drawable/tihuo_ed_bg">

                    <EditText
                        android:id="@+id/change_duan"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1.3"
                        android:background="@null"
                        android:hint="短信验证码"
                        android:inputType="number"
                        android:singleLine="true"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x28"
                        android:maxLength="6"
                        />

                    <View
                        android:layout_width="@dimen/x2"
                        android:layout_height="@dimen/x40"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="@dimen/x4"
                        android:background="@color/color_e5e5e5" />

                    <TextView
                        android:id="@+id/change_duan_btn"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="点击发送"
                        android:textColor="@color/name_se"
                        android:textSize="@dimen/x24" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/change_weitanchuan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x60"
            android:background="@color/weitanchuang"
            android:gravity="center_vertical"
            android:visibility="invisible"
            >
            <ImageView
                android:id="@+id/change_weitanchuan_img"
                android:layout_width="@dimen/x40"
                android:layout_height="@dimen/x40"
                android:layout_marginLeft="@dimen/x16"
                />
            <TextView
                android:id="@+id/change_weitanchuan_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号绑定失败"
                android:textColor="@color/baise"
                android:textSize="@dimen/x28"
                android:layout_marginLeft="@dimen/x16"/>

        </LinearLayout>
        <Button
            android:id="@+id/change_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x70"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/x16"
            android:layout_marginLeft="@dimen/x16"
            android:layout_marginRight="@dimen/x16"
            android:background="@drawable/congzhi_bg"
            android:text="确认"
            android:textColor="@color/baise"
            android:textSize="@dimen/x28" />
    </RelativeLayout>
</LinearLayout>
